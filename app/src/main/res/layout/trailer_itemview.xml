<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="@dimen/trailer_card_width"
        android:layout_height="@dimen/trailer_card_height"
        android:layout_marginLeft="@dimen/trailer_card_margin"
        android:layout_marginRight="@dimen/trailer_card_margin">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/list_image_trailer"
                android:layout_width="@dimen/trailer_image_height"
                android:layout_height="@dimen/trailer_image_width"
                android:scaleType="fitCenter"
                android:padding="@dimen/trailer_image_padding"
                android:src="@drawable/default_vid"
                android:layout_centerInParent="true"
                android:contentDescription="@string/trailer_thumbnail"/>
            <ImageView
                android:id="@+id/list_image_play"
                android:src="@drawable/play_icon4_white"
                android:layout_width="@dimen/play_icon_height"
                android:layout_height="@dimen/play_icon_height"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:contentDescription="@string/play_icon"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>